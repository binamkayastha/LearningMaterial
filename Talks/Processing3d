void setup() {
    size(1280, 1280, P3D);

    noStroke();
    smooth(); // antialiases
}

void draw() {
    background(128);
    camera(....); // Specify where the camera is in the beginning

    rotateZ(...); // mouseX is bultin variable
    rotateX(...);

    pointLight(....); // Theses are the lights, parameters, colors, thenlocations);

    triangles(4, 0, 0, size/2, size);
}

